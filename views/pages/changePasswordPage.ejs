
<%- include('../template/head')-%>
<%- include('../template/nav')-%>



    <div class="container">
        <h4>Change your password</h4>
        <form action="http://localhost:3000/api/user/pswd/<%= userInfo._id %>?_method=PUT" method="POST">
            <div class="row">
                <div class="input-field col s12">
                        <label for="oldPassword">Old password</label>
                        <input type="password" class="form-control" id="oldPassword" name="oldPassword" required data-error="Please enter your old password">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                        <label for="password">New password</label>
                        <input type="password" class="form-control" id="password" name="password" required data-error="Please enter your new password">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                        <label for="confirmPassword">Confirm password</label>
                        <input  type="password" id="confirmPassword" class="form-control" name="confirmPassword" required data-error="Please enter your new password">
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <div class="bottom_flex3">
                        <button class="waves-effect waves-light btn btnIndex btnplein" id="submit" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>




<%- include('../template/footer')-%>
